<div class="w-full pt-xl py-md">
    <div class="w-full grid grid-cols-1 lg:grid-cols-5 gap-sm">
        <div class="w-full relative">
            <input placeholder="{{ 'Search'|trans }}" type="text" class="w-full py-2 pr-lg query-filter px-sm" aria-label="{{ 'Search news'|trans }}"/>
            <span onclick="this.parentNode.children[0].focus()" class="absolute top-[-1px] right-[-1px] px-3 py-3 bg-white border-neutral-300 border flex flex-col justify-center items-center">
                                <i class="fa fa-search"></i>
                            </span>
        </div>
        <div class="w-full relative">
            <div class="select px-0 w-full">
                <select data-placeholder="{{ 'Filter by category'|trans }}" multiple class="w-full category-filter select2 min-w-full py-2" aria-label="{{ 'Filter by category'|trans }}">
                    {% if source.data == 'categories' %}
                        {% for category in categories %}
                            <option value="{{ category.id }}">{{ category.title }}</option>
                        {% endfor %}
                    {% else %}
                        {% for category in swiss_engineering_get_news_categories() %}
                            <option value="{{ category.id }}">{{ category.title }}</option>
                        {% endfor %}
                    {% endif %}
                </select>
            </div>
        </div>
        <div class="w-full relative">
            <div class="date px-0 w-full">
                <label for="filter_date" class="sr-only">{{ 'Filter by date'|trans }}</label>
                <select id="filter_date" data-placeholder="{{ 'Filter by date'|trans }}" multiple class="date-filter select2 px-4 py-2 after:hidden min-w-full w-full">
                </select>
            </div>
        </div>
    </div>
    <div class="loading"></div>
</div>
