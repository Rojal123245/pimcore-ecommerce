{% set brick_title = 'Call to action Areabrick'|trans %}

{% extends 'areas/base.html.twig' %}

{% block section %}

    <section class="px-2 md:px-0 w-full bg-gradient-to-b from-primary-400 to-primary-800">
        {% set title = pimcore_input('text', {placeholder: 'Enter text here'|trans}) %}
        {% set link = pimcore_link('link') %}
        <div class="container mx-auto flex flex-col justify-between items-center lg:flex-row py-10">
            <div class="max-w-4xl">
                {% if not title.isEmpty() or editmode %}
                    <{{ heading_tag.data }} class="text-h2 text-center lg:text-left text-white mb-5">
                        {{ title|raw }}
                    </{{ heading_tag.data }}>
                {% endif %}
            </div>
            <div>
                {% if editmode %}
                    {{ link|raw }}
                {% endif %}
                {% if link.href is not empty %}
                    <div class="flex">
                        <a class="bg-white font-noto-regular text-center flex items-center gap-5 text-primary-500 px-6 py-3" href="{{ link.href }}">
                            {{ link.text }}
                            <svg class="upside-down w-4 h-4" id="Icon_Pfeil" data-name="Icon Pfeil" xmlns="http://www.w3.org/2000/svg" width="29.17" height="29.17" viewBox="0 0 29.17 29.17">
                                <path id="Pfad_6592" class="fill-primary-500 stroke-primary-500" data-name="Pfad 6592" d="M138.389,4.044l-2.828-2.828L113.22,23.557V7.582h-4v22.8h22.8v-4H116.047Z" transform="translate(-109.219 -1.216)"/>
                            </svg>
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </section>
{% endblock %}
