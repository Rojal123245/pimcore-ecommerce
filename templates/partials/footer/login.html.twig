<div class="w-full flex gap-sm flex-col font-noto z-50">
    <h4 class="font-noto-regular text-h4 leading-h2">{{ 'Login for Mitglieder'|trans }}</h4>
    <div class="flex flex-row gap-5 items-center">
        <form class="flex flex-col lg:flex-row w-full antialiased gap-5 m-0">
            <label class="hidden" for="emailFooter">{{ 'Email'|trans }}</label>
            <input id="emailFooter" class="w-full border border-neutral-300 max-w[412px] px-4 py-2 font-noto-regular text-[15px]" type="text" placeholder="{{ 'Email'|trans }}">
            <label class="hidden" for="passwordFooter">{{ 'Email'|trans }}</label>
            <input id="passwordFooter" class="w-full border border-neutral-300 max-w[412px] px-4 py-2 font-noto-regular text-[15px]" type="password"
                   placeholder="{{ 'Password'|trans }}">
            <button
                class="px-10 py-2 bg-primary-500 font-noto hover:bg-primary-700 active:bg-primary-700">{{ 'Login'|trans }}</button>

            <div class="flex flex-row justify-center items-center gap-2">
                <button>
                    <span class="icon icon-inverted icon-regular icon-question-mark"></span>
                </button>
                <a href="" class="underline text-white text-xs">
                    {{ 'Forgot password?' }}
                </a>
            </div>
        </form>
    </div>
</div>